@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1> Welcome Susie, Here Are All Your Stylists </h1>
<h4 id="stylistindex"> Down below you will see your stylist names, what they specialize in, and what their price is </h4>

@if(Model.Count == 0)
{
    @Html.ActionLink("Add a stylist", "Create", "Stylist")
}
@foreach(Stylist stylistV in Model)
{   
    <div class="card"> 
    <h4><b>@Html.ActionLink($"{stylistV.Name}", "Details", "Stylist", new {id = stylistV.StylistId}) | @stylistV.Specialties </b></h4>
    Price:<p>@stylistV.Price</p>
    </div>
}

