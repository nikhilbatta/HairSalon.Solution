
@using HairSalon.Models;

@if(Model.Count == 0)
{
    @Html.ActionLink("Add a stylist", "Create", "Stylist")
}
@foreach(Stylist stylistV in Model)
{    
    <p>@Html.ActionLink($"{stylistV.Name}", "Details", "Stylist", new {id = stylistV.StylistId}) | @stylistV.Specialties</p>
    Price: <p>@stylistV.Price</p>
}

