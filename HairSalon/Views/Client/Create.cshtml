@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h1>Add a new client!</h1>
<br>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <div class = "form-group">
      @Html.LabelFor(model => model.ClientName)
      @Html.EditorFor(model => model.ClientName)
    @Html.ValidationMessageFor(model => model.ClientName)
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber)
    @Html.LabelFor(model => model.StyleType)
    @Html.TextBoxFor(model => model.StyleType)
    <b>Stylist Name: </b> @Html.DropDownList("StylistId")
    <br>
    <br>
    <input id="clientbutton" type = "submit" value = "Create new client"/>
    </div>

}
